<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_localMusic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/music_icn_local" />

        <TextView
            android:id="@+id/fragment_main_item_title"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="本地音乐"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_localeMusicCount"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="-5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="(0)"
            android:textColor="@color/test_color"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/music_icn_recent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="最近播放"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="-5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="(0)"
            android:textColor="@color/test_color"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/music_icn_dld" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="下载管理"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="-5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="(0)"
            android:textColor="@color/test_color"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/music_icn_artist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="我的歌手"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="-5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="(0)"
            android:textColor="@color/test_color"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mgray" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#dcdcdc">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/my_create_music_list"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView11" />
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imageView11"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView11"
                    android:text="我的歌单" />
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_create_musiclist_add"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imageView10"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_create_musiclist_del"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/imageView10" />
            </RelativeLayout>
            <ListView
                android:id="@+id/lv_createmusiclist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>
    </LinearLayout>